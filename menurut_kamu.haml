:javascript

  $( document ).ready(function() {
    if ($(window).width() >= 768) {

      var heights = $(".eqheight").map(function() {
        return $(this).height();
      }).get();

      var maxHeight = Math.max.apply(null, heights) -90;
      $(".eqheight").height(maxHeight);
      $(".youtube-video").height(maxHeight);

    }
  });