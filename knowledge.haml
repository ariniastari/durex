:javascript

  $( document ).ready(function() {
    if ($(window).width() >= 768) {

      $('.bg-knowledge-image').css({
        'height': $('.featured').height() + 130
      });

      var heights = $(".eqheight").map(function() {
        return $(this).height();
      }).get();

      var maxHeight = Math.max.apply(null, heights);
      $(".eqheight").height(maxHeight);

    }
  });